{
  "extends": "@tsconfig/node18-strictest-esm/tsconfig.json",
  "include": ["env.d.ts", "src/**/*"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "lib": ["DOM"],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
