{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "package.json"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": ["node"],
    "lib": ["ESNext"]
  }
}
