  "main": "./bin/reverb.min.js",
  "bin": {
    "reverb.min.js": "./bin/reverb.min.js"
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode development",
    "serve": "webpack serve --mode development --color --progress --watch",
    "lint": "gts lint ./src/**/*.{js,ts}",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix ./src/**/*.{js,ts}",
    "prepare": "npm.cmd run compile",
    "pretest": "npm.cmd run compile",
    "posttest": "npm.cmd run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/logue/reverb.js.git"
  },
  "keywords": [
    "webaudio",
    "convolver",
    "effect",
    "reverb"
  ],
  "author": {
    "name": "Logue",
    "email": "logue@hotmail.co.jp",
    "url": "https://logue.dev/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/logue/reverb.js/issues"
  },
  "homepage": "https://github.com/logue/reverb.js#readme",
  "devDependencies": {
    "@types/node": "^14.14.14",
    "@types/terser-webpack-plugin": "^5.0.2",
    "@types/webaudioapi": "^0.0.27",
    "@types/webpack": "^4.41.25",
    "@types/webpack-dev-server": "^3.11.1",
    "fs": "0.0.1-security",
    "gts": "^3.0.3",
    "lint-staged": "^10.5.3",
    "terser-webpack-plugin": "^5.0.3",
    "ts-loader": "^8.0.12",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "webpack": "^5.11.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm lint",
      "git add"
    ]
  }
