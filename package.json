{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@logue/reverb",
  "version": "0.5.2",
  "description": "Reverb effect.",
  "files": [
    "dist"
  ],
  "main": "./dist/reverb.umd.js",
  "module": "./dist/reverb.es.js",
  "exports": {
    ".": {
      "import": "./dist/reverb.es.js",
      "require": "./dist/reverb.umd.js"
    }
  },
  "types": "./dist/Reverb.d.ts",
  "directories": {
    "doc": "docs"
  },
  "keywords": [
    "webaudio",
    "convolver",
    "effect",
    "reverb"
  ],
  "author": {
    "name": "Logue",
    "email": "logue@hotmail.co.jp",
    "url": "https://logue.dev/"
  },
  "homepage": "https://github.com/logue/Reverb.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:logue/Reverb.js.git"
  },
  "bugs": {
    "url": "https://github.com/logue/Reverb.js/issues"
  },
  "engines": {
    "node": ">=16"
  },
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "vite build & tsc",
    "build:clean": "rimraf dist",
    "lint": "eslint . --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint && prettier . --write",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@modyqyw/vite-plugin-eslint": "^1.2.0",
    "@types/eslint": "^8.4.1",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "^8.12.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^2.7.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "prettier-plugin-jsdoc": "^0.3.36",
    "prettier-plugin-md-nocjsp": "^1.2.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.3",
    "vite": "^2.9.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,htm,html}": "eslint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint",
    "*": "prettier -w -u"
  }
}
