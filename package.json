{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@logue/reverb",
  "version": "0.4.6",
  "description": "Reverb effect.",
  "main": "bin/reverb.min.js",
  "module": "dist/Reverb.js",
  "types": "dist/Reverb.d.ts",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "webpack --mode production",
    "build:esm": "tsc --module es2015",
    "dev": "webpack --mode development",
    "serve": "webpack serve --mode development --color --progress",
    "lint": "gts lint ./src/**/*.{js,ts}",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix ./src/**/*.{js,ts}",
    "prepare": "npm.cmd run compile",
    "pretest": "npm.cmd run compile",
    "posttest": "npm.cmd run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/logue/reverb.js.git"
  },
  "keywords": [
    "webaudio",
    "convolver",
    "effect",
    "reverb"
  ],
  "author": {
    "name": "Logue",
    "email": "logue@hotmail.co.jp",
    "url": "https://logue.dev/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/logue/reverb.js/issues"
  },
  "homepage": "https://github.com/logue/reverb.js#readme",
  "devDependencies": {
    "@types/node": "^16.11.6",
    "@types/webpack": "^5.28.0",
    "@types/webpack-dev-server": "^4.3.1",
    "gts": "^3.1.0",
    "hosted-git-info": "^4.0.2",
    "lint-staged": "^11.2.6",
    "terser-webpack-plugin": "^5.2.4",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4",
    "webpack": "^5.61.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.4.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm lint",
      "git add"
    ]
  }
}